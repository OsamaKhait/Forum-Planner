{% extends 'base.html.twig' %}

{% block title %}Edit User Role{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg mt-10">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Edit Role for {{ user.email }}</h2>

        {{ form_start(form) }}
        <div class="mb-4">
            <label class="block text-gray-700 font-bold mb-2">Select Roles</label>
            <div class="flex flex-col space-y-2">
                {% for choice in form.roles %}
                    <div class="flex items-center">
                        {{ form_widget(choice, {'attr': {'class': 'mr-2'}}) }}
                        {{ form_label(choice, null, {'label_attr': {'class': 'text-gray-700'}}) }}
                    </div>
                {% endfor %}
            </div>
            {{ form_errors(form.roles) }}
        </div>

        <div>
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 focus:outline-none focus:bg-indigo-700">
                Save Changes
            </button>
        </div>
        {{ form_end(form) }}

        <div class="mt-4">
            <a href="{{ path('app_admin_user_list') }}" class="text-indigo-600 hover:underline">Back to User List</a>
        </div>
    </div>
{% endblock %}
