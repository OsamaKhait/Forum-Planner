{% extends 'base.html.twig' %}

{% block title %}Stand Index{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white shadow-xl rounded-lg w-full max-w-6xl p-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-6">Stand Index</h1>

            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-300">
                    <thead>
                    <tr class="bg-gray-200">
                        <th class="py-3 px-4 text-left font-semibold text-gray-700">Id</th>
                        <th class="py-3 px-4 text-left font-semibold text-gray-700">Title</th>
                        <th class="py-3 px-4 text-left font-semibold text-gray-700">Description</th>
                        <th class="py-3 px-4 text-left font-semibold text-gray-700">Capacity</th>
                        <th class="py-3 px-4 text-left font-semibold text-gray-700">Duration</th>
                        <th class="py-3 px-4 text-left font-semibold text-gray-700">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for stand in stands %}
                        <tr class="border-b hover:bg-gray-100">
                            <td class="py-3 px-4">{{ stand.id }}</td>
                            <td class="py-3 px-4">{{ stand.title }}</td>
                            <td class="py-3 px-4">{{ stand.description }}</td>
                            <td class="py-3 px-4">{{ stand.capacity }}</td>
                            <td class="py-3 px-4">{{ stand.duration ? stand.duration|date('H:i:s') : '' }}</td>
                            <td class="py-3 px-4">
                                <a href="{{ path('app_stand_show', {'id': stand.id}) }}" class="text-blue-500 hover:text-blue-700">Show</a>
                                <a href="{{ path('app_stand_edit', {'id': stand.id}) }}" class="text-green-500 hover:text-green-700 ml-4">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="py-3 px-4 text-center text-gray-500">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="mt-6 text-right">
                <a href="{{ path('app_stand_new') }}" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-300 ease-in-out">
                    Create New Stand
                </a>
            </div>
        </div>
    </div>
{% endblock %}
