{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Forum Details</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            <table class="min-w-full bg-white">
                <tbody>
                <tr class="border-b">
                    <th class="py-3 px-6 text-left font-semibold text-gray-700">Id</th>
                    <td class="py-3 px-6">{{ forum.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-3 px-6 text-left font-semibold text-gray-700">Title</th>
                    <td class="py-3 px-6">{{ forum.title }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-3 px-6 text-left font-semibold text-gray-700">Description</th>
                    <td class="py-3 px-6">{{ forum.description }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-3 px-6 text-left font-semibold text-gray-700">Location</th>
                    <td class="py-3 px-6">{{ forum.location }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex space-x-4">
            <a href="{{ path('app_forum_index') }}" class="text-blue-600 hover:text-blue-800 font-medium transition duration-200">
                ← Back to list
            </a>

            <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="text-green-600 hover:text-green-800 font-medium transition duration-200">
                Edit
            </a>

            {{ include('forum/_delete_form.html.twig') }}
        </div>

        <div class="mt-8">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Leave a Rating</h2>
            <form method="post" action="{{ path('app_evaluation_new', {'forumId': forum.id}) }}" class="space-y-4">
                <div class="flex items-center">
                    <input type="radio" id="star5" name="rating" value="5" class="hidden" required />
                    <label for="star5" class="cursor-pointer text-2xl text-gray-300 hover:text-yellow-500">★</label>

                    <input type="radio" id="star4" name="rating" value="4" class="hidden" />
                    <label for="star4" class="cursor-pointer text-2xl text-gray-300 hover:text-yellow-500">★</label>

                    <input type="radio" id="star3" name="rating" value="3" class="hidden" />
                    <label for="star3" class="cursor-pointer text-2xl text-gray-300 hover:text-yellow-500">★</label>

                    <input type="radio" id="star2" name="rating" value="2" class="hidden" />
                    <label for="star2" class="cursor-pointer text-2xl text-gray-300 hover:text-yellow-500">★</label>

                    <input type="radio" id="star1" name="rating" value="1" class="hidden" />
                    <label for="star1" class="cursor-pointer text-2xl text-gray-300 hover:text-yellow-500">★</label>
                </div>

                <div>
                    <label for="comment" class="block text-gray-700">Comment</label>
                    <textarea id="comment" name="comment" rows="4" class="border rounded-md w-full p-2" placeholder="Leave your comment here..."></textarea>
                </div>

                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-300 ease-in-out">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}
